generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id           String   @id
  title        String
  description  String?
  thumbnail    String?
  channelTitle String?
  publishedAt  String?
  viewCount    String?
  likeCount    String?
  url          String
  createdAt    DateTime @default(now()) @db.Timestamptz()
}

model Feedback {
  id           String   @id
  sentiment    String
  title        String?
  description  String?
  channelTitle String?
  publishedAt  String?
  viewCount    String?
  likeCount    String?
  url          String?
  createdAt    DateTime @default(now()) @db.Timestamptz()

  @@index([sentiment], name: "idx_feedback_sentiment")
}

model KeyValueModel {
  key   String @id
  value String
}
